{
  "name": "infection-visualizer",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:electron": "electron .",
    "dist": "npm run build:frontend && npm run copy:dist && electron-builder",
    "build:frontend": "cd .. && cd frontend && cd infection-visualizer && ng build --configuration production --base-href ./",
    "copy:dist": "cd .. && xcopy /E /Y /I frontend\\infection-visualizer\\dist\\ electron-app\\dist",
    "start": "npm run build:frontend && npm run copy:dist && npm run start:electron"
  },
  "build": {
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "portable_python",
        "to": "portable_python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "portable_python",
        "to": "portable_python"
      }
    ],
    "appId": "com.infection.visualizer",
    "productName": "Infection Visualizer",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
